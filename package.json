{
  "name": "@hodfords/nestjs-oidc",
  "version": "10.0.10",
  "description": "NestJS OIDC Provider",
  "license": "MIT",
  "readmeFilename": "README.md",
  "author": {
    "name": "Minh Ngo",
    "email": "minh.ngo@hodfords.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hodfords-solutions/nestjs-oidc"
  },
  "bugs": {
    "url": "https://github.com/hodfords-solutions/nestjs-oidc/issues"
  },
  "tags": [
    "typescript",
    "nestjs",
    "oidc"
  ],
  "devDependencies": {
    "@nestjs/common": "10.3.1",
    "@nestjs/core": "10.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "29.5.11",
    "@types/lodash.isempty": "^4.4.9",
    "@types/node": "20.11.10",
    "@types/oidc-provider": "^8.5.1",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "cspell": "8.3.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.7",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "lodash": "4.17.21",
    "openid-client": "^5.6.5",
    "prettier": "3.2.4",
    "reflect-metadata": "0.1.13",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start:dev": "npm run prebuild && nest start --watch",
    "start": "ts-node src/index.ts",
    "build": "tsc --project tsconfig.prod.json && cp package.json dist/package.json",
    "deploy": "npm run build && npm publish dist",
    "format": "prettier --write \"**/*.ts\"",
    "check": "prettier --check \"**/*.ts\"",
    "test": "jest --passWithNoTests  --testTimeout=450000 ",
    "cspell": "cspell",
    "prepare": "is-ci || husky install",
    "lint": "eslint \"libs/**/*.ts\" --fix --max-warnings 0",
    "lint-staged": "lint-staged"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/platform-express": "^10.3.10",
    "ioredis": "^5.4.1",
    "lodash.isempty": "^4.4.0",
    "oidc-provider": "^8.5.1"
  }
}
